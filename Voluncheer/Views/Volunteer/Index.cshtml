@using Voluncheer.Models;
@model VolunteerViewModel
@{
    ViewBag.Title = "Volunteers";
}

<h2>Volunteers</h2>

<table class="table table-striped  table table-bordered table-sm">
    <col width="5%" />
    <col width="25%"/>
    <col width="10%"/>
    <col width="10%" />
    <col width="10%"/>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Call</th>
            <th>Email</th>
            <th>Message</th>
        </tr>
    </thead>
    <tbody>
        @{ 
            foreach (var volunteer in Model.VolunteerList)
            {
                <tr>
                    <td>1</td>
                    <td>@Html.ActionLink(volunteer.FullName(), "Profile", "Volunteer")</td>
                    <td>(206) 555-1234</td>
                    <td><img src="~/Content/Img/email.png" class="rounded" width="15%"></td>
                    <td><a href="~/Chat/DirectMessage/@volunteer.ID" id="message"><img src="~/Content/Img/message.png" class="rounded" width="15%" alt="message" /></a></td>
                </tr>
            }
        }

    </tbody>
</table>

