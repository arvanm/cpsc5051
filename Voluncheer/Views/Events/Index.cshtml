@using Voluncheer.Models
@model EventViewModel
@{
    ViewBag.Title = "Events";
}

<h2>Events</h2>
<div class="container">
    <div class="row">
        <div class="col">
            @Html.ActionLink("+ New Event", "Create", "Events", null, new { @class = "btn btn-success" })
        </div>
    </div>
    <div class="row">
        <div class="card card-body bg-light">
            <h3>@Html.ActionLink("Competition", "Details", "Events", null, new { @class = "" })</h3>
            <p>Location</p>
            <p>Date</p>
        </div>
    </div>
    <div class="row">
        <div class="card card-body bg-light">
            <h3>@Html.ActionLink("Practice", "Details", null, new { @class = "" })</h3>
            <p>Location</p>
            <p>Date</p>
        </div>
    </div>
</div>

<script type="text/javascript">
    function adminUpdate() {
        alert("Location of practice has changed");
    }

    setTimeout(adminUpdate, 6000);
</script>