
@{
    ViewBag.Title = "Create";
}
<h2>Create a New Event</h2>
<!-- basic details section -->
<h3>Basic Details</h3>
<div id="basic-details" class="container border">
    <div class="form-group">
        <label for="title">Title:</label>
        <input name="title" type="text" placeholder="E.g. Practice" class="form-control" />
    </div>
    <div class="form-group">
        <label for="location">Location:</label>
        <input name="location" type="text" placeholder="E.g. Your team's high school" class="form-control" />
    </div>
    <div class="form-group">
        <label for="location-map">Link to Map (optional):</label>
        <input name="location-map" type="text" placeholder="https://www.google.com/maps/..." class="form-control" />
    </div>
    <div class="form-group">
        <label for="date-and-time">Date and Time:</label>
        <input name="date-and-time" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group">
        <label for="event-type">Event Title:</label>
        <select name="event-type" class="form-control">
            <option value="practice">Practice</option>
            <option value="competition">Competition</option>
            <option value="Team Building">Practice</option>
        </select>
    </div>
</div>
<!-- uniform picker -->
<h3>Uniform Components</h3>
<div id="uniform-components" class="container border">
    <label for="uniform-items">Choose Uniform Items Here (select more than one)</label>
    <select name="uniform-items" class="form-control" multiple>
        <option>Casual Practice Gear</option>
        <option>Invincible Top</option>
        <option>Fearless Top</option>
        <option>Force Top</option>
        <option>Swift Top</option>
        <option>Echo Top</option>
        <option>Shell Top</option>
        <option>Odyssey Shrug</option>
        <option>Odyssey Gauntlet Sleeves</option>
        <option>Odyssey Spats</option>
        <option>Invincible Skirt</option>
        <option>Fearless Skirt</option>
        <option>Force Skirt</option>
        <option>Swift Skirt</option>
        <option>Echo Skirt</option>
        <option>Grand Skirt</option>
        <option>Crossover Skirt</option>
        <option>Glory Skirt</option>
        <option>Arena Skirt</option>
        <option>Gladiator Skirt</option>
        <option>Nike Black Shoes</option>
        <option>Reebok Blue Shoes</option>
        <option>Asics Red Shoes</option>
    </select>
</div>
